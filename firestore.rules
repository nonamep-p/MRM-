rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * @description This ruleset allows public read access to travel packages and restricts write access to authenticated admins.
     * @path /travelPackages/{travelPackageId}
     * @allow (get, list): Any user can read travel packages.
     * @allow (create, update, delete): Only authenticated admins can create, update, or delete travel packages.
     * @deny create, update, delete: if true; // TODO: Add admin validation logic.
     * @principle Grants public read access while restricting writes to admins for travel packages.
     */
    match /travelPackages/{travelPackageId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin validation logic.
    }

    /**
     * @description This ruleset restricts access to contact form submissions to authenticated admins only.
     * @path /contactFormSubmissions/{contactFormSubmissionId}
     * @allow get, list: Only authenticated admins can read contact form submissions.
     * @allow create: Only authenticated admins can create contact form submissions.
     * @deny update, delete: No one can update or delete contact form submissions.
     * @principle Restricts access to sensitive contact form data to authorized personnel.
     */
    match /contactFormSubmissions/{contactFormSubmissionId} {
      allow get, list, create: if false; // TODO: Add admin validation logic.
      allow update, delete: if false;
    }
  }
}